# ====================================
# NeuroBreath Platform - Environment Variables Template
# ====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ====================================
# Next.js Public Variables
# ====================================
# These are exposed to the browser (prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_SITE_URL=https://www.neurobreath.co.uk
NEXT_PUBLIC_SITE_NAME=NeuroBreath

# ====================================
# Database (if using Prisma)
# ====================================
# PostgreSQL, MySQL, SQLite, etc.
# Example: postgresql://user:password@localhost:5432/neurobreath
DATABASE_URL=your_database_connection_string_here

# ====================================
# Authentication (NextAuth.js)
# ====================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=https://www.neurobreath.co.uk

# ====================================
# Email (if using email-based auth or notifications)
# ====================================
# SMTP configuration
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@example.com
EMAIL_SERVER_PASSWORD=your_email_password
EMAIL_FROM=noreply@neurobreath.co.uk

# ====================================
# Analytics (Optional)
# ====================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ====================================
# Third-Party APIs (Optional)
# ====================================
# OpenAI (for AI coaching features - future)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Stripe (for donations/shop - future)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ====================================
# Cloudflare (if using Workers/KV/R2)
# ====================================
# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Cloudflare API Token (for deployments)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ====================================
# Feature Flags (Optional)
# ====================================
# Enable/disable features in development
NEXT_PUBLIC_ENABLE_AI_COACH=false
NEXT_PUBLIC_ENABLE_SHOP=false
NEXT_PUBLIC_ENABLE_USER_ACCOUNTS=false

# ====================================
# Development Only
# ====================================
# Set to "development" or "production"
NODE_ENV=development

# Show debug logs
NEXT_PUBLIC_DEBUG=false
